<sla:Slo xmlns:sla="http://sla.atos.eu">
    <sla:Description>This SLO ensures the AVG(CPU usage, 2 min) is below 40%</sla:Description>
    <sla:Constraint>Metric LT 40</sla:Constraint>
    <sla:ViolationWindow count="1" interval="PT0S"/>
    <sla:ViolationWindow count="2" interval="PT1H"/>
</sla:Slo>
